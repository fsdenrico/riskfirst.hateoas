<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net8.0</TargetFrameworks>
    <AssemblyName>RiskFirst.Hateoas</AssemblyName>
    <PackageId>RiskFirst.Hateoas</PackageId>
    <GenerateAssemblyConfigurationAttribute>false</GenerateAssemblyConfigurationAttribute>
    <GenerateAssemblyCompanyAttribute>false</GenerateAssemblyCompanyAttribute>
    <GenerateAssemblyProductAttribute>false</GenerateAssemblyProductAttribute>
    <GeneratePackageOnBuild>False</GeneratePackageOnBuild>
    <PackageProjectUrl>https://github.com/riskfirst/riskfirst.hateoas</PackageProjectUrl>
    <Authors>RiskFirst</Authors>
    <PackageLicenseUrl>https://github.com/riskfirst/riskfirst.hateoas/blob/master/LICENSE</PackageLicenseUrl>
    <Description>An implementation of HATEOAS for aspnet core web api projects which gives full control of which links to apply to models returned from your api.</Description>
    <RepositoryUrl>https://github.com/riskfirst/riskfirst.hateoas</RepositoryUrl>
    <RepositoryType>GIT</RepositoryType>
    <PackageTags>HATEOAS aspnet dotnetcore</PackageTags>
    <PackageReleaseNotes>
        v0.0.1 - Initial release
        v1.0.0 - First stable release
        v1.0.1 - Bug fixes to 1.0.0
        v1.1.0 - Refactored a lot of the library to simplify the use of generics, enabling implementation of ability to Combine policies.
        v1.1.1 - Support for .NET Framework 4.5.1
        v1.1.2 - Changed dependent assembly loading procedure for Controllers.
        v1.1.3 - Implemented interface to allow control assembly loading
        v2.0.0 - Upgrade framework and dependencies to netstandard2/net461
        v3.0.0 - extract models to separate assembly
        v3.1.0 - netcore package reference upgrade to 2.1
        v3.1.1 - bug fix for routes with more than 1 HttpMethodAttribute
        v3.1.2 - Patch Security Issues
        v4.0.0 - Drop .NET Framework support
        v4.0.1 - RiskFirst.Hateoas.Models v5.0.0
    </PackageReleaseNotes>
    <Version>4.0.1</Version>
    <PackageIconUrl>https://raw.githubusercontent.com/riskfirst/pkgicons/master/riskfirst-pkg.png</PackageIconUrl>
    <AssemblyVersion>4.0.1.0</AssemblyVersion>
    <FileVersion>4.0.1.0</FileVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyModel" Version="8.0.2" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\RiskFirst.Hateoas.Models\RiskFirst.Hateoas.Models.csproj" />
  </ItemGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App"/>
  </ItemGroup>

</Project>
